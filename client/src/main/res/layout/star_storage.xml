<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/stored_minerals_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/mining_white" />

    <TextView
        android:id="@+id/stored_minerals"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/stored_minerals_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000"
        android:gravity="center|end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="500 / 500"/>

    <TextView
        android:id="@+id/delta_minerals"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="@id/stored_minerals"
        app:layout_constraintTop_toBottomOf="@id/stored_minerals"
        android:background="#000"
        android:gravity="center|end"
        android:textColor="#0f0"
        android:textSize="10sp"
        tools:text="+123/hr"/>

    <ImageView
        android:id="@+id/stored_goods_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#000"
        app:layout_constraintStart_toEndOf="@id/stored_minerals"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/farming_white" />

    <TextView
        android:id="@+id/stored_goods"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/stored_goods_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000"
        android:gravity="center|end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="500 / 500" />

    <TextView
        android:id="@+id/delta_goods"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="@id/stored_goods"
        app:layout_constraintTop_toBottomOf="@id/stored_goods"
        android:background="#000"
        android:gravity="center|end"
        android:textColor="#f00"
        android:textSize="10sp"
        tools:text="-23/hr"/>
</merge>